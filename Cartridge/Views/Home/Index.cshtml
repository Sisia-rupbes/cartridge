@{
    ViewBag.Title = "Главная";
}

<h2>Отчет по состоянию картриджей</h2>
@using (Ajax.BeginForm("ShowRequests", new AjaxOptions { UpdateTargetId = "cartridge-result",LoadingElementId = "loading" }))
{
    <div class="form-group">

        <input type="submit" value="Заявки" class="btn btn-default" onclick="ShowElem()" />
    </div>
}
