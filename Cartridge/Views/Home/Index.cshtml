<p>Поиск картриджа по номеру</p>
@using (Ajax.BeginForm("FindCartridge", new AjaxOptions { UpdateTargetId = "cartridge-result", LoadingElementId = "loading" }))
{
    <div class="form-group">
        <input type="text" name="cartridgeID" class="form-control text-box single-line"/>
        <input type="submit" value="Найти" class="btn btn-default" onclick="ShowElem()"/>
    </div>
}

<div id="cartridge-result" class="server-result" style="opacity:0;"><div id="loading" style="display:none;">Идет загрузка...</div></div>
<script>
    'use strict'
    var elem = document.getElementById("cartridge-result");
    function ShowElem() {
        elem.style.opacity = 1;
    }
</script>