@model Cartridge.p000048

@{
    ViewBag.Title = "Login";
}

<h2>Вход на сайт</h2>


@using (Html.BeginForm("Login","Account")) 
{
    
    <input placeholder="Логин" type="text" name="name" class="form-control text-box single-line"/>
    <input placeholder="Пароль" name="password" type="password" class="form-control text-box single-line"/>
    <input type="submit" value="Войти" class="btn btn-default"/>
   
}
<span>@ViewBag.Message</span>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
